<%- include('inc/header') -%>

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        Usuários
      </h1>
      <ol class="breadcrumb">
        <li><a href="/"><i class="fa fa-home"></i> Home</a></li>
        <li class="active">Usuários</li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content container-fluid">

    <div class="box">
        <div class="box-header">
            <h3 class="box-title">Lista</h3>
            <% if(thisUserLevel === 'Administrador') { %>
              <a href="#" class="btn btn-xs pull-right btn-success" data-toggle="modal" data-target="#modal-create"><i
                class="fa fa-plus"></i>
              Novo</a>
            <% } %>
        </div>
        <!-- /.box-header -->
        <div class="box-body table-responsive no-padding">
            <table class="table table-striped table-hover">
                <thead>
                  <tr>
                    <th style="width: 10px">#</th>
                    <th>Nome</th>
                    <th>Login</th>
                    <th>Nível</th>
                    <th>Status</th>
                    <th>Cadastro</th>
                    <th style="min-width: 134px;">Ações</th>
                  </tr>
                </thead>
                <tbody>
                    <% data.forEach(function(row){ %>
                    <tr data-row="<%= JSON.stringify(row); %>">
                        <td><%= row.ID_USUARIO %></td>
                        <td><%= row.NOME_USUARIO %></td>
                        <td><%= row.LOGIN_USUARIO %></td>
                        <td><%= row.NOME_NIVEL %></td>
                        <td><%= row.STATUS_USUARIO %></td>
                        <td><%= moment.parseZone(row.DATA_CADASTRO).format("DD/MM/YYYY") %></td>
                        <td>
                            <button type="button" class="btn btn-xs btn-info btn-update">
                              <i class="fa fa-pencil"></i> Editar
                            </button>&nbsp;
                            <button type="button" class="btn btn-xs btn-warning btn-change-password">
                                <i class="fa fa-lock"></i> Alterar Senha
                            </button>&nbsp;
                            <button type="button" class="btn btn-xs btn-danger btn-delete"><i class="fa fa-trash"></i> Excluir</button></td>
                    </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
        <!-- /.box-body -->
    </div>

    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->

  <div class="modal fade" id="modal-update-password">
    <div class="modal-dialog">
      <div class="modal-content" style="border-top: 3px solid #f39c12;">
        <form method="post" action="/users/password-change">
          <input type="hidden" name="id">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
            <h4 class="modal-title">Alterar Senha</h4>
          </div>
          <div class="modal-body">
            <div class="form-group">
              <label for="inputPassword">Nova Senha</label>
              <input type="password" class="form-control" id="inputPassword" name="password">
            </div>
            <div class="form-group">
              <label for="inputPasswordConfirm">Confirmar Senha</label>
              <input type="password" class="form-control" id="inputPasswordConfirm" name="passwordConfirm">
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Cancelar</button>
            <button type="submit" class="btn btn-warning">Salvar</button>
          </div>
        </form>
      </div>
      <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
  </div>
  
  <div class="modal fade" id="modal-create">
    <div class="modal-dialog">
      <div class="modal-content" style="border-top: 3px solid #00a65a;">
        <form method="post">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
            <h4 class="modal-title">Nova Usuário</h4>
          </div>
          <div class="modal-body">
            <div class="form-group">
              <label for="inputNameCreate">Nome</label>
              <input type="text" class="form-control" id="inputNameCreate" name="NOME_USUARIO">
            </div>
            <div class="form-group">
              <label for="inputLoginCreate">Login</label>
              <input type="text" class="form-control" id="inputLoginCreate" name="LOGIN_USUARIO">
            </div>
            <div class="form-group">
              <label for="inputNiveCreate">Nível</label>
              <select id="inputNivelCreate" name="ID_NIVEL" class="form-control">
                <option value="Inativo"> -- selecione -- </option>
                <% userLevels.forEach(function(level){ %>
                <option value="<%= level.ID_NIVEL %>"><%= level.NOME_NIVEL %></option>
                <% }); %>
              </select>
            </div>
            <div class="form-group">
              <label for="inputStatusCreate">Status</label>
              <select id="inputStatusCreate" name="STATUS_USUARIO" class="form-control">
                <option value="Inativo"> -- selecione -- </option>
                <option value="Ativo">Ativo</option>
                <option value="Inativo">Inativo</option>
              </select>
            </div>
            <div class="form-group">
              <label for="inputSenhaCreate">Senha</label>
              <input type="password" class="form-control" id="inputSenhaCreate" name="SENHA_USUARIO">
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Cancelar</button>
            <button type="submit" class="btn btn-success">Salvar</button>
          </div>
        </form>
      </div>
      <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
  </div>
  
  <div class="modal fade" id="modal-update">
    <div class="modal-dialog">
      <div class="modal-content" style="border-top: 3px solid #00c0ef;">
        <form method="post">
          <input type="hidden" name="ID_USUARIO">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
            <h4 class="modal-title">Editar Usuário</h4>
          </div>
          <div class="modal-body">
            <div class="form-group">
              <label for="inputNameUpdate">Nome</label>
              <input type="text" class="form-control" id="inputNameUpdate" name="NOME_USUARIO">
            </div>
            <div class="form-group">
              <label for="inputLoginUpdate">Login</label>
              <input type="text" class="form-control" id="inputLoginUpdate" name="LOGIN_USUARIO">
            </div>
            <div class="form-group">
              <label for="inputNivelUpdate">Nível</label>
              <select id="inputNivelUpdate" name="ID_NIVEL" class="form-control">
                <option value=""> -- selecione -- </option>
                <% userLevels.forEach(function(level){ %>
                <option value="<%= level.ID_NIVEL %>"><%= level.NOME_NIVEL %></option>
                <% }); %>
              </select>
            </div>
            <div class="form-group">
              <label for="inputStatusUpdate">Status</label>
              <select id="inputStatusUpdate" name="STATUS_USUARIO" class="form-control">
                <option value=""> -- selecione -- </option>
                <option value="Ativo">Ativo</option>
                <option value="Inativo">Inativo</option>
              </select>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Cancelar</button>
            <button type="submit" class="btn btn-info">Salvar</button>
          </div>
        </form>
      </div>
      <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
  </div>

  <%- include('inc/footer') -%>

  <script src="/js/hcode-grid.js"></script>
  <script src="/js/form-save.js"></script>

  <script>
      
    new HcodeGrid({
      deleteUrl: '/users/${data.ID_USUARIO}',
      deleteMessage: 'Deseja realmente excluir o usuário "${data.NOME_USUARIO}" de login @${data.LOGIN_USUARIO}?',
      listeners:{
          buttonClick:(btn, data, e)=>{
            document.querySelector('#modal-update-password form [name=id]').value = data.ID_USUARIO;
            $('#modal-update-password').modal('show');
          },
          afterFormCreateError:(err)=>{
            alert(err);
          },
          afterFormUpdateError:(err)=>{
            alert(err);
          }
      },
      userLevel
    });

    let formConfig = ({
        success:()=>{
            window.location.reload();
        },
        failure:(err)=>{
            alert(err);
        }
    });

    document.querySelector('#modal-update-password form').save(formConfig);

      


</script>